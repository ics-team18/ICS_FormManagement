<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AddPersonnel"
    tools:showIn="@layout/activity_add_personnel">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name:"
            android:id="@+id/lblFirstName"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="right"
            />

        <EditText
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtFirstName"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="16sp"
            android:singleLine="true"
            android:inputType="textPersonName"
            android:nextFocusDown="@+id/txtLastName"
            android:layout_columnSpan="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name:"
            android:id="@+id/lblLastName"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="right"/>

        <EditText
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtLastName"
            android:layout_row="1"
            android:layout_column="1"
            android:textSize="16sp"
            android:singleLine="true"
            android:inputType="textPersonName"
            android:nextFocusDown="@+id/txtEmail"
            android:layout_columnSpan="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail:"
            android:id="@+id/lblEmail"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="right"/>

        <EditText
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/txtEmail"
            android:layout_row="2"
            android:layout_column="1"
            android:width="150dp"
            android:nextFocusDown="@+id/txtPassword"
            android:layout_columnSpan="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:id="@+id/lblPassword"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="right"/>

        <EditText
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtPassword"
            android:layout_row="3"
            android:layout_column="1"
            android:textSize="16sp"
            android:singleLine="true"
            android:inputType="textPassword"
            android:nextFocusDown="@+id/txtMobilePhone"
            android:layout_columnSpan="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Phone:"
            android:id="@+id/lblMobilePhone"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="right"/>

        <EditText
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtMobilePhone"
            android:layout_row="4"
            android:layout_column="1"
            android:textSize="16sp"
            android:singleLine="true"
            android:inputType="phone"
            android:nextFocusDown="@+id/txtTitle"
            android:phoneNumber="false"
            android:layout_columnSpan="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title:"
            android:id="@+id/lblTitle"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_gravity="right"/>

        <EditText
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtTitle"
            android:layout_row="5"
            android:layout_column="1"
            android:textSize="16sp"
            android:singleLine="true"
            android:nextFocusDown="@+id/btnAdd"
            android:layout_columnSpan="2"/>

        <Button
            android:layout_width="125dp"
            android:layout_height="77dp"
            android:text="Add"
            android:id="@+id/btnAdd"
            android:clickable="false"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_columnSpan="1"/>

        <Button
            android:layout_width="125dp"
            android:layout_height="77dp"
            android:text="Clear"
            android:id="@+id/btnClear"
            android:clickable="false"
            android:layout_row="6"
            android:layout_column="1"
            />

        <Button
            android:layout_width="125dp"
            android:layout_height="77dp"
            android:text="Delete"
            android:id="@+id/btnDelete"
            android:clickable="false"
            android:layout_row="6"
            android:layout_column="2"/>

    </GridLayout>
</RelativeLayout>
