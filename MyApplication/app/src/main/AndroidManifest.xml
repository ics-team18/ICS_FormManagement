            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".Screens.CreateEdit.CreateEditIncident"
            android:label="@string/title_activity_main_screen"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
